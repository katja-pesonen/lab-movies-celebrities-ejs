<h2>Create a new Celebrity</h2>
<br />
<form action="/celebrities/create" method="POST">
    <label>
      Name:
      <input type="text" name="name" />
    </label>
  
    <label>
      Occupation:
      <input type="text" name="occupation" />
    </label>
  
    <label>
      Catchphrase:
      <textarea name="catchPhrase" cols="30" rows="4"> </textarea>
    </label>
  
    <button type="submit">Create</button>
  </form>